<?xml version="1.0" encoding="utf-8" ?>
<Button xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="AppLauncherMAUI.MVVM.Views.Controls.AppDownloadButton"
        xmlns:local="clr-namespace:AppLauncherMAUI.MVVM.Views.Controls"
        Command="{Binding ButtonCommand}"
        Text="Test"
        BackgroundColor="Red"
        x:DataType="local:AppDownloadButton">
    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup Name="AppDownloadButtonStates">
            <VisualState Name="ToDownload">
                <VisualState.Setters>
                    <Setter Property="BackgroundColor" Value="Gray" />
                    <Setter Property="Text" Value="To Download" />
                </VisualState.Setters>
            </VisualState>
            <VisualState Name="Downloading">
                <VisualState.Setters>
                    <Setter Property="BackgroundColor" Value="Purple" />
                    <Setter Property="Text" Value="Downloading" />
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
</Button>


