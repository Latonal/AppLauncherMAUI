<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLauncherMAUI.MVVM.Views.SettingsView"
             xmlns:local="clr-namespace:AppLauncherMAUI.MVVM.ViewModels"
             x:DataType="local:SettingsViewModel">
    <VerticalStackLayout>
        <Label 
            Text="Settings"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Picker x:Name="ThemePicker"
                Title="Select your theme"
                SelectedIndexChanged="OnThemePickerChanged">
                <!--SelectedIndex="{Binding CurrentThemeId}"-->
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>System</x:String>
                    <x:String>Light</x:String>
                    <x:String>Dark</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Label Text="Test color"
               VerticalOptions="Center"
               HorizontalOptions="Center" />

        <!--<Picker x:Name="TestPicker"
                Title="Test the Picker (not connected)"
                SelectedIndexChanged="OnThemePickerChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>System</x:String>
                    <x:String>Light</x:String>
                    <x:String>Dark</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>-->

        <Label
            Text="Create a shortcut after a download" />
        <!-- TODO -->
    </VerticalStackLayout>
</ContentView>